<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:background="#00a57d" >
    
	<LinearLayout 
	    android:id="@+id/id_tab_home"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical">
	    
	    <ImageButton 
	        android:id="@+id/id_tab_home_img"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:src="@drawable/icon_home"
			android:scaleType="centerInside"	        
	        android:background="#0000"/>
	    <TextView 
	        android:text="首页"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#fff"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/id_tab_message"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical">
	    
	    <ImageButton 
	        android:id="@+id/id_tab_message_img"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:src="@drawable/icon_message"
			android:scaleType="centerInside"	        
	        android:background="#0000"/>
	    <TextView 
	        android:text="交流"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#fff"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/id_tab_knowledge"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical">
	    
	    <ImageButton 
	        android:id="@+id/id_tab_knowledge_img"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:src="@drawable/icon_books"
			android:scaleType="centerInside"	        
	        android:background="#0000"/>
	    <TextView 
	        android:text="知识"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#fff"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/id_tab_mine"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical">
	    
	    <ImageButton 
	        android:id="@+id/id_tab_mine_img"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:src="@drawable/icon_user"
			android:scaleType="centerInside"	        
	        android:background="#0000"/>
	    <TextView 
	        android:text="我的"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#fff"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/id_tab_settings"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical">
	    
	    <ImageButton 
	        android:id="@+id/id_tab_settings_img"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:src="@drawable/icon_gear"
			android:scaleType="centerInside"	        
	        android:background="#0000"/>
	    <TextView 
	        android:text="设置"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#fff"/>
	</LinearLayout>
</LinearLayout>
